<% layout("/layout/boilerplate") %>

<body class="bg-white col-12">
    <div class="container col-12">
     <div class="row align-items-center">
      <div class="col-lg-6">
       <h1 class="display-4 font-weight-bold">
        Find the top
        <br/>
        <span >
         Hotels nearby.
        </span>
       </h1>
       <p class="mt-4 text-muted">
        We bring you not only a stay option, but an experience in your budget to enjoy the luxury.
       </p>
       <div class="mt-4 d-flex align-items-center">
        <form action="/listings">
        <button class="btn btn-danger btn-lg mr-3">
         Discover Now
        </button>
    </form>
        <div class="d-flex align-items-center">
         <img alt="Play button with a scenic view" class="rounded-circle mr-2" height="40" src="https://storage.googleapis.com/a1aa/image/v0BQARC6ZuDnUKapnzL9x_OYA6cUSBDA1BzZ_hfML9Y.jpg"/>
         <span class="font-weight-bold">
          Watch our story
         </span>
        </div>
       </div>
      </div>
      <div class="col-lg-6 mt-3 mt-lg-0 position-relative">
       <img alt="Modern architectural building with a chair and plant" class="img-fluid rounded shadow img-custom modern" src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c"/>
      </div>
     </div>
     <div class="mt-5 p-4 bg-white rounded shadow">
      <h2 class="h4 font-weight-bold mb-4">
       Check Availability
      </h2>
      <div class="form-row">
       <div class="form-group col-md-4">
        <div class="input-group">
         <div class="input-group-prepend">
          <span class="input-group-text">
           <i class="fas fa-map-marker-alt text-muted">
           </i>
          </span>
         </div>
         <input class="form-control" placeholder="Select location" type="text"/>
        </div>
       </div>
       <div class="form-group col-md-4">
        <div class="input-group">
         <div class="input-group-prepend">
          <span class="input-group-text">
           <i class="fas fa-calendar-alt text-muted">
           </i>
          </span>
         </div>
         <input class="form-control" placeholder="19 Sep to 28 Sep" type="text"/>
        </div>
       </div>
       <div class="form-group col-md-4">
        <div class="input-group">
         <div class="input-group-prepend">
          <span class="input-group-text">
           <i class="fas fa-user text-muted">
           </i>
          </span>
         </div>
         <input class="form-control" placeholder="2 Guests 1 Room" type="text"/>
        </div>
       </div>
       <div class="form-group col-md-12 text-right">
        <button class="btn btn-danger">
         <i class="fas fa-search">
         </i>
        </button>
       </div>
      </div>
     </div>
     <div class="mt-5">
      <h2 class="h4 font-weight-bold mb-4">
       Top Hotels
      </h2>
      <div class="row">
       <div class="col-md-4 mb-4">
        <div class="card">
         <img alt="Hotel image" class="card-img-top" height="200" src="https://storage.googleapis.com/a1aa/image/IHJLzBrxg7NWTeodkhi9uxHCpRh5wXe0eBOoT6O7NfQ.jpg" width="300"/>
         <div class="card-body">
          <h5 class="card-title">
           Hotel Luxury
          </h5>
          <p class="card-text">
           ₹15,000/night
          </p>
         </div>
        </div>
       </div>
       <div class="col-md-4 mb-4">
        <div class="card">
         <img alt="Hotel image" class="card-img-top" height="200" src="https://storage.googleapis.com/a1aa/image/IHJLzBrxg7NWTeodkhi9uxHCpRh5wXe0eBOoT6O7NfQ.jpg" width="300"/>
         <div class="card-body">
          <h5 class="card-title">
           Comfort Stay
          </h5>
          <p class="card-text">
           ₹11,250/night
          </p>
         </div>
        </div>
       </div>
       <div class="col-md-4 mb-4">
        <div class="card">
         <img alt="Hotel image" class="card-img-top" height="200" src="https://storage.googleapis.com/a1aa/image/IHJLzBrxg7NWTeodkhi9uxHCpRh5wXe0eBOoT6O7NfQ.jpg" width="300"/>
         <div class="card-body">
          <h5 class="card-title">
           Budget Inn
          </h5>
          <p class="card-text">
           ₹7,500/night
          </p>
         </div>
        </div>
       </div>
      </div>
      <div class="text-center mt-4">
       <button class="btn btn-danger btn-lg">
        Find More
       </button>
      </div>
     </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js">
    </script>
   </body>
  </html>
  