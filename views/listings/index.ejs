<% layout("/layout/boilerplate") %>

    <h2 class="mt-3 ml-3">All Listings</h2>
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mr-0 ml-0">
        <% for (let listing of allListings){ %>
            <a href="listings/<%= listing.id %>" class="card-link">
                <div class="card listing-card">
                    <img src="<%= listing.imageUrl %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b> <br>
                            <%= new Intl.NumberFormat('en-IN', { style: 'currency' , currency: 'INR'
                                }).format(listing.price) %>/night
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>