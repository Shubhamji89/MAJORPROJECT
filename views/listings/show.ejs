<% layout("/layout/boilerplate") %>
<div class="row">
  <div class="col-8 offset-3 mt-3 mb-2">
    <% if (listing && listing.title) { %>
    <h3><b><%= listing.title %></b></h3>
    <% } else { %>
    <h3><b>Listing Not Found</b></h3>
    <% } %>
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <% if (listing && listing.imageUrl) { %>
    <img
      src="<%= listing.imageUrl %>"
      class="card-img-top show-img"
      alt="Listing Image"
    />
    <% } else { %>
    <img
      src="/images/default.jpg"
      class="card-img-top show-img"
      alt="Default Image"
    />
    <% } %>
    <div class="card-body">
      <p class="card-text">
       <b>Owned by</b> <i
          > <%= listing && listing.owner && listing.owner ?
          listing.owner.username : "" %></i
        >
        <br />
        <%= listing && listing.description ? listing.description : "" %> <br />
        <%= listing && listing.price ? new Intl.NumberFormat('en-IN', { style:
        'currency', currency: 'INR' }).format(listing.price) : "" %><br />
        <%= listing && listing.location ? listing.location : "" %> <br />
        <%= listing && listing.country ? listing.country : "" %><br />
      </p>
    </div>
  </div>

  <br />
</div>

<% if (currentUser && listing.owner._id.equals(currentUser._id)) { %>
<div class="btns mb-3">
  <% if (listing) { %>
  <a
    href="/listings/<%= listing._id %>/edit"
    class="btn btn-dark col-1.5 offset-3 edit-btn"
    >Edit</a
  >
  <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark offset-5">Delete</button>
  </form>
  <% } %>
</div>
<% } %>


<div class="col-8 offset-3 mb-3">
  
 
  <% if (currentUser) { %>
    <hr />
    <h4>Leave a Review</h4>
  <% if (listing) { %>
  <form
    method="post"
    novalidate
    class="needs-validation"
    action="/listings/<%= listing._id %>/reviews"
  >
    <div>
      <label for="rating" class="form-label">Rating</label>
      <input
        type="range"
        min="1"
        max="5"
        id="rating"
        name="review[rating]"
        class="form-range form-range-track"
      />
    </div>
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea
        id="comment"
        name="review[comment]"
        cols="30"
        rows="5"
        class="form-control blurred-border"
        required
      ></textarea>
      <div class="invalid-feedback">Please enter a comment.</div>
    </div>
    <button type="submit" class="btn btn-outline-danger">Submit</button>
  </form>
  <% } %>
  <% } %>
  
  <hr />
  <h4>All Reviews</h4>
  <div class="row">
    <% if (listing && listing.reviews) { %> <% listing.reviews.forEach(review =>
    { %>
    <div class="card ms-3 col-md-12 col-lg-5 mb-3">
      <div class="card-body">
        <h5 class="card-title">@<%= review.author.username %></h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="card-text"><%= review.rating %> star</p>
      </div>
      <form
        class="mb-3"
        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        method="post"
      >
        <button class="btn sm btn-danger">Delete</button>
      </form>
    </div>
    <% }); %> <% } %>
  </div>
</div>
